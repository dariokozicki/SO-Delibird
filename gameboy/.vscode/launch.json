{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Gameboy",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/gameboy",
            "args": [
                "BROKER",
                "LOCALIZED_POKEMON",
                "PIKACHU",
                "3",
                "4", "5",
                "6","7",
                "8","9",
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}